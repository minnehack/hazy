<main>
    <h1>
        Log in
    </h1>
    <form method="post" action="/admin">
        <div class="form-group">
            <h2>
                <label for="username">
                    Username
                </label>
            </h2>
            <input type="text" name="username" required minlength="1" maxlength="100">
        </div>
        <div class="form-group">
            <h2>
                <label for="password">
                    Password
                </label>
            </h2>
            <input type="password" name="password" required minlength="1" maxlength="100">
        </div>
        <input type="submit" value="Login">
    </form>
</main>
